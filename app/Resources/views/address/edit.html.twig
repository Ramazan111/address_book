{% extends 'base.html.twig' %}

{% block body %}
    <div class="card mt-5">
        <div class="card-header">
            Edit - {{ address.firstName }} {{ address.lastName }}
        </div>
        <div class="card-body">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input class="btn btn-sm btn-success float-right" type="submit" value="Save" />
            {{ form_end(edit_form) }}

            <a class="btn btn-sm btn-secondary" href="{{ path('address_index') }}">Back to the list</a>
            <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="{{ address.id }}" data-toggle="modal" data-target="#deleteModal">
                Delete
            </button>
        </div>
    </div>

    {% if (address.picture) %}
        <div class="card mt-5">
            <div class="card-header">
                Image
                <button class="btn btn-sm btn-danger btn-delete float-right" data-id="{{ address.id }}" data-attr="image" data-toggle="modal" data-target="#deleteModal">
                    Delete Image
                </button>
            </div>
            <div class="card-body">
                <div class="offset-md-3 col-md-6">
                    <img class="img-fluid" src="{{ asset('uploads/' ~ address.picture) }}" alt="">
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
