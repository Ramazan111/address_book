{% extends 'base.html.twig' %}

{% block body %}
    <h1>Address</h1>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_id">ID</label>
        <div class="col-sm-10">
            <input type="text" disabled id="appbundle_address_id" name="appbundle_address[id]" class="form-control" value="{{ address.id }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_firstName">First name</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_firstName" name="appbundle_address[firstName]" class="form-control" disabled value="{{ address.firstName }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_lastName">Last name</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_lastName" name="appbundle_address[lastName]" disabled class="form-control" value="{{ address.lastName }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_street">Street</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_street" name="appbundle_address[street]" disabled class="form-control" value="{{ address.street }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_zip">Zip</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_zip" name="appbundle_address[zip]" disabled class="form-control" value="{{ address.zip }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_city">City</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_city" name="appbundle_address[city]" disabled class="form-control" value="{{ address.city }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_country">Country</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_country" name="appbundle_address[country]" disabled class="form-control" value="{{ address.country }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_phone">Phone</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_phone" name="appbundle_address[phone]" disabled class="form-control" value="{{ address.phone }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_birthday">Birthday</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_birthday" name="appbundle_address[birthday]" disabled class="form-control" value="{{ address.birthday|date('M d Y') }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="appbundle_address_email">email</label>
        <div class="col-sm-10">
            <input type="text" id="appbundle_address_email" name="appbundle_address[email]" disabled class="form-control" value="{{ address.email }}">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2">Picture</label>
        <div class="col-sm-10">
            {% if (address.picture) %}
                <img width="100" src="{{ asset('uploads/' ~ address.picture) }}" alt="">
            {% else %}
                <input type="text" id="appbundle_address_email" name="appbundle_address[email]" disabled class="form-control" value="-">
            {% endif %}
        </div>
    </div>

    {{ form_start(delete_form) }}
        <a href="{{ path('address_index') }}" class="btn btn-sm btn-secondary">Back to the list</a>
        <a href="{{ path('address_edit', { 'id': address.id }) }}" class="btn btn-sm btn-primary">Edit</a>
        <input class="btn btn-sm btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
